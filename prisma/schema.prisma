model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  full_name         String
  is_verified       Boolean  @default(false)
  password          String
  randomize_channel Int
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}
